@using Paldi.Web.ViewHelpers
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Paldi.Web.Models.Login.LoginModel>

@{
    ViewBag.Title = "Вход &middot; Палди";
}

<h2 class="page-header">Вход</h2>

@if (Model.HasError)
{
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="alert alert-danger" role="alert">
                <p>
                    <strong>Не удается войти.</strong>
                </p>
                <p>
                    Пожалуйста, проверьте правильность написания <strong>логина</strong> и <strong>пароля</strong>.
                </p>
            </div>
        </div>
    </div>
}

@(
    Html.Form(true)
        .WithText("login", @Model.Login, "логин", true)
        .WithPassword("password", "пароль")
        .WithSubmit("Войти")
)
