@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Paldi.Web.Models.MenuItem>

@if (Model.Items == null || Model.Items.Count == 0)
{
    <li><a href="@Model.Url">@Model.Title</a></li>
}
else
{
    <li class="dropdown">
        <a href="@Model.Url" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Model.Title <span class="caret"></span></a>
        <ul class="dropdown-menu">
        @foreach (var item in Model.Items)
        {
            <li><a href="@item.Url">@item.Title</a></li>
        }
        </ul>
    </li>
}
